# Docker Monitor Agent Configuration
# Copy this file to .env and update the values

# Required: Authentication token for the agent
AGENT_TOKEN=your-secure-token-change-this

# Optional: Port to expose the agent on (default: 8080)
AGENT_PORT=8080

# Optional: Docker socket path (default: /var/run/docker.sock)
DOCKER_SOCKET=/var/run/docker.sock

# Optional: Host to bind to (default: 0.0.0.0)
HOST=0.0.0.0

# Optional: Port inside container (default: 8080)
PORT=8080 